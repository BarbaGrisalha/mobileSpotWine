<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cor das estrelas inativas (apagadas) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#B0B0B0" /> <!-- Cinza escuro -->
        </shape>
    </item>

    <!-- Cor das estrelas parcialmente preenchidas -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimary" /> <!-- Cor ao avaliar -->
            </shape>
        </clip>
    </item>

    <!-- Cor das estrelas ativas (preenchidas) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimary" /> <!-- Cor ao avaliar -->
            </shape>
        </clip>
    </item>
</layer-list>
