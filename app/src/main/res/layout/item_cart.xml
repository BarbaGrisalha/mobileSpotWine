<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Imagem do vinho -->
    <ImageView
        android:id="@+id/imgVinho"
        android:layout_width="64dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/wine_default" />

    <!-- Detalhes do vinho (nome e preço) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/tvNomeVinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Vinho"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPrecoVinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 50,00"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Campo de quantidade -->
    <EditText
        android:id="@+id/etQuantidade"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="#ABABAB"
        android:hint="1"
        android:inputType="number"
        android:textAlignment="center" />

    <!-- Botão de remover (usando ImageButton) -->
    <ImageButton
        android:id="@+id/btnRemover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="#D51405"
        android:contentDescription="@string/remove_item"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_remover" />
</LinearLayout>