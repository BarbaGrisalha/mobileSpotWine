<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgVinho"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/wine_default"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/tvNomeVinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Vinho"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvQuantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade: 0" />

        <TextView
            android:id="@+id/tvPrecoVinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço: €0.00" />
    </LinearLayout>
</LinearLayout>
